<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:shadowDx="0"
          android:shadowDy="3"
          android:shadowColor="@color/button_shadow_color"
          android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:type="linear" android:useLevel="true" android:startColor="#ff4488fb" android:endColor="#ff45aff3" android:angle="90" />
            <corners android:topLeftRadius="7dp" android:topRightRadius="7dp" android:bottomLeftRadius="7dp" android:bottomRightRadius="7dp" />
        </shape>
    </item>
    <item android:shadowDx="0"
          android:shadowDy="3"
          android:shadowColor="@color/button_shadow_color"
          android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:type="linear" android:useLevel="true" android:startColor="#ff4488fb" android:endColor="#ff45aff3" android:angle="90" />
            <corners android:topLeftRadius="7dp" android:topRightRadius="7dp" android:bottomLeftRadius="7dp" android:bottomRightRadius="7dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="7dp" android:topRightRadius="7dp" android:bottomLeftRadius="7dp" android:bottomRightRadius="7dp" />
            <stroke android:width="1dp" android:color="#555555" />
        </shape>
    </item>
</selector>