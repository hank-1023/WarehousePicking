<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey_layout_background_color">

        <TextView
                android:text="@string/order_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/orderNumberLabel"
                style="@style/order_number_textview_style"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="47dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="24dp"/>

        <EditText
                android:layout_width="0dp"
                android:id="@+id/orderNumberEditText"
                style="@style/input_and_scan_edit_text_style"
                android:hint="@string/order_number_edit_hint"
                app:layout_constraintStart_toEndOf="@+id/orderNumberLabel"
                android:layout_marginStart="33dp"
                app:layout_constraintBaseline_toBaselineOf="@+id/orderNumberLabel"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="52dp"
                >

            <requestFocus/>
        </EditText>

        <ImageButton
                android:layout_width="50dp"
                android:layout_height="0dp"
                app:srcCompat="@drawable/scan_icon"
                android:id="@+id/orderNumberScanButton"
                android:background="@drawable/square_button_background"
                app:layout_constraintTop_toTopOf="@+id/orderNumberEditText"
                app:layout_constraintBottom_toBottomOf="@+id/orderNumberEditText"
                app:layout_constraintEnd_toEndOf="@+id/orderNumberEditText"/>

        <EditText
                android:layout_width="0dp"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/stockNumberEditText"
                style="@style/input_and_scan_edit_text_style"
                app:layout_constraintStart_toStartOf="@+id/orderNumberEditText"
                app:layout_constraintEnd_toEndOf="@+id/orderNumberEditText"
                app:layout_constraintBaseline_toBaselineOf="@+id/stockNumberLabel"
                android:hint="@string/stock_number_edit_text_hint"/>

        <ImageButton
                android:layout_width="50dp"
                android:layout_height="0dp"
                app:srcCompat="@drawable/scan_icon"
                android:id="@+id/stockNumberScanButton"
                android:background="@drawable/square_button_background"
                app:layout_constraintTop_toTopOf="@+id/stockNumberEditText"
                app:layout_constraintBottom_toBottomOf="@+id/stockNumberEditText"
                app:layout_constraintEnd_toEndOf="@+id/stockNumberEditText"
                />

        <TextView
                android:text="@string/stock_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/stockNumberLabel"
                style="@style/order_number_textview_style"
                app:layout_constraintTop_toBottomOf="@+id/orderNumberLabel"
                android:layout_marginTop="31dp"
                app:layout_constraintEnd_toEndOf="@+id/orderNumberLabel"
                app:layout_constraintStart_toStartOf="@+id/orderNumberLabel"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>